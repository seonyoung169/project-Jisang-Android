<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    <RelativeLayout
        android:id="@+id/info_text_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/name_and_price_text"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/iteminfo_text_background"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/item_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="꽈배기 도톰 니트"
                android:textSize="16dp"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/item_price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/item_name_text"
                android:text="34000원"
                android:textColor="#000000"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/item_detail_text"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_and_price_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="25dp"
            android:gravity="center"
            android:text="울 소재의 케이블 니트입니다.\n여러가지 짜임 형태로 포인트를 주었으며\n양 옆트임으로 편안한 착용감을 더했습니다.\n베이지/그레이/네이비 색상으로 나옵니다."
            android:textSize="11dp"
            android:textColor="#000000"
             />

    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#FFFFFF"
        android:layout_below="@+id/info_text_area">

    </android.support.v7.widget.RecyclerView>


</RelativeLayout>