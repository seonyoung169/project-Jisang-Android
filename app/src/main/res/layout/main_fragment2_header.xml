<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.v4.view.ViewPager
        android:layout_marginTop="15dp"
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="bottom"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

    </android.support.v4.view.ViewPager>

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/viewPager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BEST ITEM"
            android:textSize="12dp"
            />
        <ImageView
            android:layout_alignTop="@+id/btns"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:src="@drawable/status_line"/>

    <HorizontalScrollView
        android:layout_marginTop="30dp"
        android:id="@+id/btns"
        android:layout_below="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >


        <LinearLayout
            android:layout_marginTop="20dp"
            android:id="@+id/sliding_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:background="#ffffff"
            android:orientation="horizontal">

            <Button
                android:id="@+id/item_btn_all"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:background="@drawable/menu_all" />

            <Button
                android:id="@+id/item_btn_outer"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:background="@drawable/menu_outer" />

            <Button
                android:id="@+id/item_btn_top"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:background="@drawable/menu_top" />

            <Button
                android:id="@+id/item_btn_pants"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:background="@drawable/menu_bottom" />

            <Button
                android:id="@+id/item_btn_skirt"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:background="@drawable/menu_skirt" />

            <Button
                android:id="@+id/item_btn_onepiece"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:background="@drawable/menu_onepiece" />

            <Button
                android:id="@+id/item_btn_shoes"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:background="@drawable/menu_shoes" />

            <Button
                android:id="@+id/item_btn_bag"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:background="@drawable/menu_bag" />

            <Button
                android:id="@+id/item_btn_acc"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:background="@drawable/menu_acc" />

        </LinearLayout>
    </HorizontalScrollView>
    </RelativeLayout>

</LinearLayout>