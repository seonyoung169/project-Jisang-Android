<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/main_title_bar"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#ffffff"
                android:text="업로드"
                android:textColor="#4c2338"
                android:textSize="12pt"
                android:textStyle="normal"
                android:textAlignment="center"
                android:layout_marginTop="14dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true" />
            <Button
                android:layout_width="35dp"
                android:layout_height="45dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/backbtn"
                android:id="@+id/upload_back_button" />


        </RelativeLayout>

        <View
            android:id="@+id/main_title_bar_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eaeaea"
            android:layout_below="@+id/main_title_bar"/>

        <RelativeLayout
            android:id="@+id/upload_content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:layout_below="@+id/main_title_bar_line">

            <TextView
                android:id="@+id/product_cate_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="46dp"
                android:text="상품 분류"
                android:textColor="#000000"
                android:textSize="13dp" />


            <RelativeLayout
                android:id="@+id/item_cate_icon_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/product_cate_text">

                <LinearLayout
                    android:id="@+id/upload_cate_iconbar1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/cate_outer_button"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/outer_click" />


                    <ImageView
                        android:id="@+id/cate_top_button"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/top"/>

                    <ImageView
                        android:id="@+id/cate_pants_button"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/pants"/>

                    <ImageView
                        android:id="@+id/cate_skirt_button"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/skirt"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/upload_cate_iconbar2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:layout_below="@+id/upload_cate_iconbar1">

                    <ImageView
                        android:id="@+id/cate_onepiece_button"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/onepiece" />


                    <ImageView
                        android:id="@+id/cate_shoes_button"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/shoes" />

                    <ImageView
                        android:id="@+id/cate_bag_button"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/bag"/>

                    <ImageView
                        android:id="@+id/cate_acc_button"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/acc"/>


                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/upload_itemname_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_cate_icon_layout"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="46dp"
                android:text="상품 이름"
                android:textColor="#000000"
                android:textSize="13dp"
                />

            <EditText
                android:id="@+id/upload_edittext1"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="41dp"
                android:layout_below="@+id/upload_itemname_text"
                android:layout_centerHorizontal="true"
                android:background="@drawable/edittext_background_gray"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <TextView
                android:id="@+id/upload_price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/upload_edittext1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="46dp"
                android:text="판매 가격"
                android:textColor="#000000"
                android:textSize="13dp"
                />

            <EditText
                android:id="@+id/upload_edittext2"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="41dp"
                android:layout_below="@+id/upload_price_text"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/edittext_background_gray" />

            <TextView
                android:id="@+id/upload_hash_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/upload_edittext2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="46dp"
                android:text="해시태그(최대 10개)"
                android:textColor="#000000"
                android:textSize="13dp"
                />

            <EditText
                android:id="@+id/upload_edittext3"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="41dp"
                android:layout_below="@+id/upload_edittext2"
                android:layout_marginTop="38dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:hint="#겨울아우터#떡복이코트#울소재"
                android:background="@drawable/edittext_background_gray" />

            <TextView
                android:id="@+id/upload_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/upload_edittext3"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="46dp"
                android:text="상세 설명"
                android:textColor="#000000"
                android:textSize="13dp"
                />

            <EditText
                android:id="@+id/upload_edittext4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="41dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/upload_edittext3"
                android:layout_marginTop="38dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/edittext_background_gray"
                android:lines="5"
                android:maxLines="5"/>

            <TextView
                android:id="@+id/upload_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/upload_edittext4"
                android:layout_marginTop="19dp"
                android:layout_marginLeft="46dp"
                android:text="이미지 업로드"
                android:textColor="#000000"
                android:textSize="13dp"
                />

            <LinearLayout
                android:id="@+id/upload_image_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/upload_edittext4"
                android:layout_marginTop="49dp"
                >

                <ImageView
                    android:id="@+id/upload_pic1"
                    android:layout_below="@+id/upload_edittext4"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_marginLeft="40dp"
                    android:src="@drawable/add_pic" />
                <ImageView
                    android:id="@+id/upload_pic2"
                    android:layout_below="@+id/upload_edittext4"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_marginLeft="9dp"
                    android:visibility="gone"
                    android:src="@drawable/add_pic" />

                <ImageView
                    android:id="@+id/upload_pic3"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_below="@+id/upload_edittext4"
                    android:layout_toRightOf="@+id/upload_pic"
                    android:layout_marginLeft="9dp"
                    android:visibility="gone"
                    android:background="@drawable/add_pic"/>

            </LinearLayout>

            <TextView
                android:id="@+id/upload_checkbox_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/upload_image_layout"
                android:layout_marginTop="33dp"
                android:layout_marginLeft="70dp"
                android:text="해당 상품을 베스트 상품으로 등록하시겠습니까?"
                android:textSize="11dp"
                android:textColor="#000000"
                />

            <CheckBox
                android:id="@+id/upload_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/upload_image_layout"
                android:layout_toRightOf="@+id/upload_checkbox_text"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="2dp" />


            <Button
                android:id="@+id/upload_ok_button"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:text="등록"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:layout_below="@+id/upload_checkbox_text"
                android:background="@drawable/uploadok_button_custom"
                android:layout_marginTop="36dp"
                android:layout_marginBottom="50dp"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>