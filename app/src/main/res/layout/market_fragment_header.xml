<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/bestitem_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/market_loca_bar"
        android:layout_marginTop="14dp"
        android:text="BEST ITEM"
        android:textColor="#000000"
        android:textSize="13dp"/>


    <RelativeLayout
        android:id="@+id/bestitem_image_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bestitem_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp">

        <ImageView
            android:id="@+id/best_item1"
            android:layout_width="223dp"
            android:layout_height="223dp"
            android:src="@drawable/item1"
            />

        <ImageView
            android:id="@+id/best_item2"
            android:layout_width="109dp"
            android:layout_height="109dp"
            android:layout_toRightOf="@+id/best_item1"
            android:layout_marginLeft="5dp"
            android:src="@drawable/item1"
            />

        <ImageView
            android:id="@+id/best_item3"
            android:layout_width="109dp"
            android:layout_height="109dp"
            android:layout_below="@+id/best_item2"
            android:layout_toRightOf="@+id/best_item1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/item1"
            />

        <ImageView
            android:id="@+id/best_item4"
            android:layout_width="109dp"
            android:layout_height="109dp"
            android:layout_below="@+id/best_item1"
            android:layout_marginTop="5dp"
            android:src="@drawable/item1"
            />

        <ImageView
            android:id="@+id/best_item5"
            android:layout_width="109dp"
            android:layout_height="109dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/best_item1"
            android:layout_toStartOf="@+id/best_item3"
            android:src="@drawable/item1" />

        <ImageView
            android:id="@+id/best_item6"
            android:layout_width="109dp"
            android:layout_height="109dp"
            android:layout_below="@+id/best_item3"
            android:layout_toRightOf="@+id/best_item5"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/item1"
            />

    </RelativeLayout>

    <View
        android:id="@+id/header_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EAEAEA"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/bestitem_image_layout"/>

    <TextView
        android:id="@+id/allitem_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_line"
        android:layout_marginTop="21dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        android:text="ALL ITEM"
        android:textColor="#000000"
        android:textSize="13dp"  />

</RelativeLayout>