<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9"
    >

    <RelativeLayout
        android:id="@+id/main_title_bar"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#ffffff"
            android:text="MY"
            android:layout_marginTop="14dp"
            android:textColor="#4c2338"
            android:textSize="20dp"
            android:textStyle="normal"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />

    </RelativeLayout>

    <View
        android:id="@+id/main_title_bar_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/main_title_bar"
        android:background="#cdcdcd"
        android:layout_alignParentRight="true"/>


    <TextView
        android:id="@+id/shoppingmall_manage_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/general_text"
        android:layout_alignStart="@+id/general_text"
        android:layout_below="@+id/main_title_bar_line"
        android:layout_marginTop="30dp"
        android:text="쇼핑몰 관리"
        android:textColor="#7A7A7A"
        android:textSize="12dp" />

    <View
        android:id="@+id/logint_button_upline"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/shoppingmall_manage_text"
        android:layout_marginTop="9dp"
        android:background="#cdcdcd"
        android:layout_alignParentRight="true"/>

    <Button
        android:id="@+id/mypage_login_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/logint_button_upline"
        android:background="#FFFFFF"
        android:drawableLeft="@drawable/my_login"
        android:drawablePadding="108dp"
        android:gravity="left|center"
        android:paddingLeft="33dp"
        android:text="로그인"
        android:textColor="#000000"
        android:textSize="17dp" />



    <ImageView
        android:id="@+id/mypage_login_btn_shadow"
        android:layout_below="@+id/mypage_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/titlebar_shadow" />

    <TextView
        android:id="@+id/general_text"
        android:layout_below="@+id/mypage_login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="33dp"
        android:text="일반"
        android:textSize="12dp"
        android:textColor="#7A7A7A"
        />

    <RelativeLayout
        android:id="@+id/twobutton_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/general_text"
        android:layout_marginTop="7dp"
        android:background="#FFFFFF">

        <View
            android:id="@+id/notice_button_upline"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#cdcdcd"
            android:layout_alignParentRight="true"/>


        <Button
            android:id="@+id/mypage_notice_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#FFFFFF"
            android:drawableLeft="@drawable/my_notice"
            android:drawablePadding="108dp"
            android:layout_below="@+id/notice_button_upline"
            android:gravity="left|center"
            android:paddingLeft="38dp"
            android:text="공지사항"
            android:textColor="#000000"
            android:textSize="17dp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/mypage_notice_btn_shadow"
        android:layout_below="@+id/twobutton_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/titlebar_shadow"/>

</RelativeLayout>
