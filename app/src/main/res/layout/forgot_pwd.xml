<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/main_title_bar"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="14dp"
            android:background="#ffffff"
            android:text="비밀번호 찾기"
            android:textAlignment="center"
            android:textColor="#4c2338"
            android:textSize="20dp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/registered_back_button"
            android:layout_width="35dp"
            android:layout_height="45dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/backbtn" />

    </RelativeLayout>
    <ImageView
        android:id="@+id/main_title_bar_shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_title_bar"
        android:src="@drawable/titlebar_shadow" />

    <TextView
        android:id="@+id/user_name"
        android:layout_below="@+id/main_title_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="60dp"
        android:textColor="#000000"
        android:text="이름"
        android:textSize="14dp"
        />
    <EditText
        android:id="@+id/user_name_edit"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/user_name"
        android:layout_width="279dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:textColor="#929191"
        android:paddingLeft="10dp"
        android:background="@drawable/edittext_background"/>
    <TextView
        android:id="@+id/user_email"
        android:layout_below="@+id/user_login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="60dp"
        android:textColor="#000000"
        android:text="email"
        android:textSize="14dp"
        />
    <EditText
        android:id="@+id/user_email_edit"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/user_name"
        android:layout_width="279dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:textColor="#929191"
        android:paddingLeft="10dp"
        android:background="@drawable/edittext_background"/>
    <TextView
        android:id="@+id/user_phone"
        android:layout_below="@+id/user_email_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="60dp"
        android:textColor="#000000"
        android:text="전화번호"
        android:textSize="14dp"
        />
    <EditText
        android:id="@+id/user_phone_edit"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/user_phone"
        android:layout_width="279dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:textColor="#929191"
        android:paddingLeft="10dp"
        android:background="@drawable/edittext_background"/>
    <TextView
        android:layout_marginTop="52dp"
        android:layout_marginLeft="55dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="* 임시 비밀번호 발급"
        android:textSize="7pt"
        />
    <RelativeLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:layout_marginLeft="57dp"
            android:id="@+id/phone_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/phone_check_t"
            android:layout_toRightOf="@+id/phone_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="전화번호"
            android:textSize="16dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />
        <CheckBox
            android:layout_toRightOf="@+id/phone_check_t"
            android:id="@+id/email_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="57dp"
            />
        <TextView
            android:layout_toRightOf="@+id/email_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="email"
            android:textSize="16dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />

    </RelativeLayout>

    <Button
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_width="218dp"
        android:layout_height="39dp"
        android:background="@drawable/signupbutton_background"
        android:text="임시 비밀번호 받기"
        android:textColor="#ffffff"
        android:textSize="15dp"
        />


</LinearLayout>