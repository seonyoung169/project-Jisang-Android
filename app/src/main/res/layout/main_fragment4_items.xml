<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="95dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/market_image"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:src="@drawable/pic" />

        <View
            android:id="@+id/market_seperation_line"
            android:layout_width="1.5dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginLeft="35dp"
            android:background="#EAEAEA" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/market_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="25dp"
                android:text="관심 매장1"
                android:textColor="#000000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/market_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="5dp"
                android:text="강남 지하상가" />

        </LinearLayout>

        <Button
            android:id="@+id/like_list_cancel"
            android:gravity="right"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/like_list_cancel" />

    </LinearLayout>

    <View
        android:id="@+id/list_item_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f0f0f0"
        />
</LinearLayout>