<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9">

    <RelativeLayout
        android:id="@+id/main_title_bar"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#ffffff"
            android:text="MY"
            android:textColor="#4c2338"
            android:textSize="20dp"
            android:textStyle="normal"
            android:textAlignment="center"
            android:layout_marginTop="14dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            />

    </RelativeLayout>


    <View
        android:id="@+id/main_title_bar_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/main_title_bar"
        android:background="#cdcdcd"
        />

    <TextView
        android:id="@+id/shoppingmall_manage_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/general_text"
        android:layout_alignStart="@+id/general_text"
        android:layout_below="@+id/main_title_bar_line"
        android:layout_marginTop="27dp"
        android:text="쇼핑몰 관리"
        android:textColor="#7A7A7A"
        android:textSize="12dp" />


    <View
        android:id="@+id/logout_btn_upline"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/shoppingmall_manage_text"
        android:layout_marginTop="6dp"
        android:background="#cdcdcd"
        android:layout_alignParentRight="true"/>

    <Button
        android:id="@+id/mypage_login_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/logout_btn_upline"
        android:background="#FFFFFF"
        android:drawableLeft="@drawable/my_logout"
        android:drawablePadding="67dp"
        android:gravity="left|center"
        android:paddingLeft="29dp"
        android:text="로그아웃"
        android:textColor="#000000"
        android:textSize="17dp" />

    <ImageView
        android:id="@+id/mypage_login_btn_shadow"
        android:layout_below="@+id/mypage_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/my_shadow"/>

    <TextView
        android:id="@+id/general_text"
        android:layout_below="@+id/mypage_login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:layout_marginLeft="33dp"
        android:text="일반"
        android:textSize="12dp"
        android:textColor="#7A7A7A"
        />


    <View
        android:id="@+id/question_btn_upline"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/general_text"
        android:layout_marginTop="6dp"
        android:background="#cdcdcd"
        android:layout_alignParentRight="true"/>


    <RelativeLayout
        android:id="@+id/twobutton_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/general_text"
        android:layout_marginTop="7dp"
        android:background="#FFFFFF">


        <Button
            android:id="@+id/mypage_question_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#FFFFFF"
            android:drawableLeft="@drawable/my_question"
            android:drawablePadding="67dp"
            android:gravity="left|center"
            android:paddingLeft="31dp"
            android:text="문의목록"
            android:textColor="#000000"
            android:textSize="17dp" />

        <View
            android:id="@+id/between_line"
            android:layout_width="281dp"
            android:layout_height="1dp"
            android:layout_below="@+id/mypage_question_btn"
            android:background="#BDBDBD"
            android:layout_alignParentRight="true"/>

        <Button
            android:id="@+id/mypage_notice_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/between_line"
            android:background="#FFFFFF"
            android:drawableLeft="@drawable/my_notice"
            android:drawablePadding="76dp"
            android:gravity="left|center"
            android:paddingLeft="35dp"
            android:text="공지사항"
            android:textColor="#000000"
            android:textSize="17dp" />

    </RelativeLayout>



    <ImageView
        android:id="@+id/mypage_notice_btn_shadow"
        android:layout_below="@+id/twobutton_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/my_shadow"/>

</RelativeLayout>